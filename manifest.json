{
	"manifest_version": 3,
	"name": "FACE-M",
	"description": "See win percentage of your opponents in FACEIT lobbies",
	"version": "1.1.0",
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	"background": { "service_worker": "background.js" },
	"content_scripts": [
		{
			"run_at": "document_end",
			"matches": ["https://www.faceit.com/*"],
			"js": ["content.js"]
		}
	],
	"action": {
		"default_icon": "icon-48.png",
		"default_popup": "popup.html",
		"default_title": "FACE-M"
	},
	"permissions": ["cookies", "storage"],
	"host_permissions": ["https://*.faceit.com/*"]
}
